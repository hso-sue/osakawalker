<%= render "shared/header" %>

<div class="eachshop-main">
  <h2 class="list-title">
    FOOD SHOP LIST
  </h2>
  <div class="eachshop-lists">
    <% @food.each do |shop| %>
    <div class="eachshop-list">
      <%= link_to image_tag(shop.images[0], class: :shop_image),shop_path(shop.id) %>
      <div class="eachshop-contents">
        <div class="eachshop-detail-name">
          <%= link_to "ショップ名：#{shop.shop_name}", shop_path(shop.id), class: :detail_link %>
        </div>
        <div class="eachshop-detail-introduction">
          <%= "ショップ詳細：#{shop.introduction}" %>
        </div>
        <div class="eachshop-detail-address">
          <%= "所在地：#{shop.prefecture.name}#{shop.shop_city.name}#{shop.shop_address}" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>